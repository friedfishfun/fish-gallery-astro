---
// src/components/BlogList.astro
import Date from "@components/Date.astro";
import type { Blog } from "@libs/microcms.ts";

interface Props {
  blogs: Blog[];
}

const { blogs }: Props = Astro.props;
---

{
  blogs.length > 0 ? (
    <div class="grid grid-cols-3 gap-px sm:grid-cols-4 sm:gap-1">
      {blogs.map((blog) => (
        <a
          href={`/blog/${blog.id}`}
          class="group block overflow-hidden bg-gray-100"
          aria-label={blog.title}
          title={blog.title}
        >
          <img
            src={
              blog.thumbnail?.url
                ? `${blog.thumbnail.url}?q=60&w=800&fit=crop`
                : "/assets/images/noimg.png"
            }
            alt={blog.title}
            class="w-full aspect-square object-cover transition duration-200 group-active:opacity-80"
            loading="lazy"
          />
        </a>
      ))}
    </div>
  ) : (
    <p class="text-center text-gray-500 text-lg">記事がありません</p>
  )
}